<div class="s-product-card js-post-card__wrap">
  <div class="s-product-card__media">
    <a href="{{url}}" class="s-product-card__link--cover"></a>
    {{#if feature_image}}
    <img alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
      class="s-product-card__image" src="{{img_url feature_image}}" loading="lazy">
    {{/if}}
  </div>
  <div class="s-product-card__main">
    {{#if primary_tag}}
    <div class="s-product-card__tag">
      <a href="{{url}}" class="s-product-card__link">{{primary_tag.name}}</a>
    </div>
    {{/if}}
    <div class="s-product-card__title">
      <a href="{{url}}" class="s-product-card__link">{{title}}</a>
    </div>
    <div class="s-product-card__date">
      <time class='' datetime='{{ date format=' YYYY.MM.DD.' }}'>{{ date format='YYYY.MM.DD.' }}</time>
    </div>

    <div class="s-product-card__date-info">
    {{#if payment.used_period_days}}
      <div class="s-product-card__date-info--title">{{payment.period_days_title}}</div>
      <div class="s-product-card__date-info--date">{{payment.period_date_from_now}}
      </div>
    {{/if}}
    </div>

    <div class="s-product-card__prices">
      {{#if @member.paid}}
      {{#if payment.have_price_sale}}
      {{!-- 유료회원 가격 표시 --}}
      {{!-- <div class="s-product-card__price">
        <div class="s-product-card__price--label">무료회원할인가</div>
        <div class="s-product-card__price--number">
          {{#if payment.have_price_original}}
          {{price payment.price_original currencyFormat="none" currency="KRW"}}{{#if payment.price_original}}원{{/if}}
          {{else}}
          {{price payment.price currencyFormat="none" currency="KRW"}}{{#if payment.price}}원{{/if}}
          {{/if}}
        </div>
      </div> --}}
      <div class="s-product-card__price">
        {{!-- <div class="s-product-card__price--label">유료회원할인가</div> --}}
        <div class="s-product-card__price--number">
          {{price payment.price_sale currencyFormat="none" currency="KRW" }}{{#if payment.price_sale}}원{{/if}}
        </div>
      </div>
      {{else}}
      {{#if payment.have_price_original}}
      <div class="s-product-card__price">
        {{!-- <div class="s-product-card__price--label">회원할인가</div> --}}
        <div class="s-product-card__price--number">
          {{price payment.price currencyFormat="none" currency="KRW"}}{{#if payment.price_sale}}원{{/if}}
        </div>
      </div>
      {{else}}
      <div class="s-product-card__price">
        {{!-- <div class="s-product-card__price--label">가격</div> --}}
        <div class="s-product-card__price--number">
          {{price payment.price currencyFormat="none" currency="KRW"}}{{#if payment.price_sale}}원{{/if}}
        </div>
      </div>
      {{/if}}
      {{/if}}
      {{else}}
      {{!-- 비회원/무료회원 가격 표시 --}}
      
      {{#if payment.have_price_sale}}
      <div class="s-product-card__price">
        {{!-- <div class="s-product-card__price--label">유료회원할인가</div> --}}
        <div class="s-product-card__price--number">
          {{price payment.price_sale currencyFormat="none" currency="KRW"}}{{#if payment.price_sale}}<span class="s-product-card__price--krw" style="font-size: 16px; font-weight: 500; line-height: 21px;">원</span>{{/if}}
        </div>
      </div>
      {{else}}
      <div class="s-product-card__price">
        {{!-- <div class="s-product-card__price--label">일반회원할인가</div> --}}
        <div class="s-product-card__price--number">
          {{price payment.price currencyFormat="none" currency="KRW"}}{{#if payment.price}}<span class="s-product-card__price--krw" style="font-size: 16px; font-weight: 500; line-height: 21px;">원</span>{{/if}}
        </div>
      </div>
      {{/if}}
      {{/if}}
    </div>
  </div>
</div>