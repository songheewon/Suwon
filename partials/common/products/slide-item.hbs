<div class="s-products-slide-item">
  <div class="s-products-slide-item__media">
    <a href="{{url}}" class="s-products-slide-item__link--cover">
    {{#if feature_image}}
    <img
      alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
      class="s-products-slide-item__image"
      src="{{img_url feature_image}}"
      >
    {{/if}}
    </a>
    <div class="s-products-slide-item__info">
    <div class="s-products-slide-item__title">{{title}}</div>
    <div class="s-products-slide-item__excerpt">{{excerpt}}</div>
    </div>
  </div>
</div>