<a href="{{url}}" class="s-products-feature2__item">
          <div class="s-products-feature2__item--image">
            {{#if feature_image}}
            <img class="s-products-feature2__item--image-img" src="{{img_url feature_image}}" alt="{{title}}" loading="lazy">
            {{/if}}
            <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.85) 0%,
            rgba(0, 0, 0, 0.5) 40%,
            rgba(0, 0, 0, 0.2) 70%,
            rgba(0, 0, 0, 0) 100%
        );"></div>
          <div class="s-products-feature2__item--info">
            {{#if primary_tag}}
            <div class="s-product-card__tag">{{primary_tag.name}}</div>
            {{/if}}
          <div class="s-products-feature2__item--title">{{title}}</div>
           <div class="s-products-feature2__item--date" datetime="{{ date format="YYYY.MM.DD." }}" title="{{ date format="YYYY.MM.DD." }}">{{ date format="YYYY.MM.DD." }}</div>
        </div>
          </div>
        </a>