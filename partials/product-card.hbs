<div class="c-product-card">
  <div class="c-product-card__media">
    <a href="{{ url }}" class="c-product-card__url--cover"></a>
    {{#if feature_image}}
    <div class="c-product-card__image--wrap">
      <img
        class="c-product-card__image"
        alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
        src="{{img_url feature_image}}"
      />
    </div>
    {{/if}}
    <div class="c-product-card__meta">
    {{#match which "shop"}}
      {{#if payment.type}}
      <div class="c-product-card__type c-product-card__type--{{payment.type}} c-product-card__chips">
        <div class="c-product-card__type--name c-product-card__chips--label">
          <a class="c-product-card__type--link c-product-card__chips--link" href="/shop/{{payment.type}}/">
            {{#match payment.type "online-class"}}
            강의 VOD
            {{else match payment.type "digital-book"}}
            디지털북
            {{else match payment.type "etc"}}
            종이책
            {{else match payment.type "webinar"}}
            커뮤니티 학습
            {{/match}}
          </a>
        </div>
      </div>
      {{/if}}
    {{else match which "classroom"}}

    {{else}}
      {{#primary_tag}}
      <div class="c-product-card__tag c-product-card__chips">
        <div class="c-product-card__tag--name c-product-card__chips--label">
          <a class="c-product-card__tag--link c-product-card__chips--link" href="/product/tag/{{slug}}">{{name}}</a>
        </div>
      </div>
      {{/primary_tag}}

      {{#if tags}}
      {{#foreach tags visibility="internal" limit="1"}}
      {{#match slug "hash-best"}}
      <div class="c-product-card__tag c-product-card__internal-tag c-product-card__tag--{{slug}} c-product-card__chips">
        <div class="c-product-card__tag--name c-product-card__chips--label">
          <div class="c-product-card__tag--link c-product-card__chips--link">{{name}}</div>
        </div>
      </div>
      {{else match slug "hash-new"}}
      <div class="c-product-card__tag c-product-card__internal-tag c-product-card__tag--{{slug}} c-product-card__chips">
        <div class="c-product-card__tag--name c-product-card__chips--label">
          <div class="c-product-card__tag--link c-product-card__chips--link">{{name}}</div>
        </div>
      </div>
      {{/match}}
      {{/foreach}}
      {{/if}}
    {{/match}}
    </div>
  </div>
  <div class="c-product-card__content">
    <h2 class="c-product-card__title">
      <a href="{{ url }}" class="c-product-card__url">{{ title }}</a>
    </h2>
    <p class="c-product-card__excerpt">{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt}}{{/if}}</p>
  </div>
</div>