<div class="c-product__header">
  <div class="o-container">
    <div class="c-product__header--inner">

      <div class="c-product__info">
        <div class="c-product__meta">
          {{#primary_tag}}
          <div class="c-product-card__tag c-product-card__chips">
            <div class="c-product-card__tag--name c-product-card__chips--label">
              <a class="c-product-card__tag--link c-product-card__chips--link" href="{{url}}">{{name}}</a>
            </div>
          </div>
          {{/primary_tag}}

          {{#if tags}}
          {{#foreach tags visibility="internal" limit="1"}}
          {{#match slug "hash-best"}}
          <div class="c-product-card__tag c-product-card__internal-tag c-product-card__tag--{{slug}} c-product-card__chips">
            <div class="c-product-card__tag--name c-product-card__chips--label">
              <div class="c-product-card__tag--link c-product-card__chips--link">{{name}}</div>
            </div>
          </div>
          {{else match slug "hash-new"}}
          <div class="c-product-card__tag c-product-card__internal-tag c-product-card__tag--{{slug}} c-product-card__chips">
            <div class="c-product-card__tag--name c-product-card__chips--label">
              <div class="c-product-card__tag--link c-product-card__chips--link">{{name}}</div>
            </div>
          </div>
          {{/match}}
          {{/foreach}}
          {{/if}}
        </div>
        <h1 class="c-product__title">{{title}}</h1>
        <h2 class="c-product__sub-title">{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt}}{{/if}}</h2>
        {{#if meta_description}}
        <p class="c-product__excerpt">{{meta_description}}</p>
        {{/if}}
      </div>

      <div class="c-product__media">
      {{#if payment_status.is_paid}}
        {{#if payment.is_online_class}}
          {{#if payment.purchase.chapters}}
        <div class="c-product__video--wrap">
          <video-js id="video-for-chapter" class="c-product__video vjs-default-skin vjs-big-play-centered" controls preload="auto"></video-js>
        </div>
            {{/if}}
          {{/if}}

      {{else}}
        {{#if feature_image}}
        <div class="c-product__image--wrap">
          <img
            class="c-product__image"
            alt="{{#if feature_image_alt}}{{ feature_image_alt }}{{ else }}{{ title }}{{/if}}"
            src="{{img_url feature_image}}"
          />
        </div>
        {{/if}}
      {{/if}}
      </div>

    </div>
  </div>
</div>